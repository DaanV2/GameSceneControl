<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameSceneControl.Pages.Rooms.NewRoomPage"
             Title="NewRoomPage">
    <StackLayout>
        <Label Text="New Room"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        
        <Label x:Name="ID"/>

        <HorizontalStackLayout Margin="0,10">
            <Label Text="Name" VerticalTextAlignment="Center"/>
            <Editor x:Name="Name" Placeholder="GameRoom" 
                MaxLength="64"
                Completed="Validate_Input"
                Keyboard="Text"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="0,10">
            <Label Text="Description" VerticalTextAlignment="Center"/>
            <Editor x:Name="Description" Placeholder="My TTRPD GameRoom" 
                Keyboard="Text"
                MaxLength="256" Completed="Validate_Input"/>
        </HorizontalStackLayout>

        <StackLayout Orientation="Horizontal">
            <Button x:Name="Button_Add" Text="Add" Clicked="Button_Add_Clicked"/>
            <Button x:Name="Button_Cancel" Text="Cancel" Clicked="Button_Cancel_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
