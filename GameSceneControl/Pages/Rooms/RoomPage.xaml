<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameSceneControl.Pages.Rooms"
             xmlns:custom="clr-namespace:GameSceneControl.Controls"
             x:Class="GameSceneControl.Pages.Rooms.RoomPage"
             x:DataType="local:RoomPageModel"
             BackgroundColor="White"
             Title="{Binding RoomInfo.Name}"
                SelectedTabColor="{StaticResource Primary}"
                UnselectedTabColor="{AppThemeBinding Light={StaticResource LightGray},Default={StaticResource LightGray}, Dark={StaticResource DarkGray}}">

    <local:RoomScenePage x:Name="RoomScene"/>
    <local:RoomEditPage x:Name="RoomEdit"/>

</TabbedPage>
