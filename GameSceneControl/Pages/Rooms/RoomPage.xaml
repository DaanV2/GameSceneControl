<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameSceneControl.Pages.Rooms"
             xmlns:custom="clr-namespace:GameSceneControl.Controls"
             x:Class="GameSceneControl.Pages.Rooms.RoomPage"
             x:DataType="local:RoomPageModel"
             Title="{Binding Controller.RoomInfo.Name}">

    <FlexLayout AlignItems="Start" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
        <Button Text="Scenes" x:Name="Button_Scenes" Clicked="Button_Scenes_Clicked"/>
        <Button Text="Edit" x:Name="Button_Edit" Clicked="Button_Edit_Clicked"/>
    </FlexLayout>

</ContentPage>
