<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameSceneControl.Pages.Rooms.NewRoomPage"
             Title="NewRoomPage">
    <StackLayout>
        <Label Text="New Room"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        
        <Editor x:Name="ID"/>
        <Editor x:Name="Name"/>
        <Editor x:Name="Description"/>

        <StackLayout Orientation="Horizontal">
            <Button x:Name="Button_Add"  Text="Add" Clicked="Button_Add_Clicked"/>
            <Button x:Name="Button_Cancel"  Text="Cancel" Clicked="Button_Cancel_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
